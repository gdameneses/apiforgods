<h1>Favorite repositories</h1>
    <% @bookmarks.each do |bookmark| %>
    <h3><%= bookmark.repo.full_name %></h3>
    <p><%= bookmark.repo.description %></p>
    <%= link_to 'View details', repo_path(bookmark.repo) %>
    <%= link_to 'Remove from favorites', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
<% end %>